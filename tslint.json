{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    // 对象字面量不需要按字母排序
    "object-literal-sort-keys": false,
    "ordered-imports": [false],
    "indent": [
        false,
        "spaces",
        2
    ],
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "no-string-literal": false,
    "no-console": [
      false
    ]
  },
  "rulesDirectory": []
}
